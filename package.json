{
  "name": "surtom",
  "private": true,
  "workspaces": [
    "front",
    "back",
    "interfaces"
  ],
  "scripts": {
    "postinstall": "husky install",
    "format": "npx pretty-quick",
    "lint:secrets": "secretlint \"**/*\"",
    "prepare": "husky install",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:back": "npm run dev --workspace=back",
    "dev:front": "npm run dev --workspace=front",
    "build": "tsc --build",
    "typecheck": "tsc --build --force",
    "build:back": "npm run build --workspace=back",
    "build:front": "npm run build --workspace=front",
    "test": "npm run test --workspaces",
    "test:back": "npm run test --workspace=back"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^10.1.1",
    "concurrently": "^8.2.2",
    "husky": "^8.0.0",
    "prettier": "^3.6.1",
    "secretlint": "^10.1.1"
  }
}
