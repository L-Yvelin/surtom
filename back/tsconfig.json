{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,

    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["../interfaces/*"]
    },
    "skipLibCheck": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "interfaces/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
