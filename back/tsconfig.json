{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["src/*"],
      "interfaces/*": ["../interfaces/*"]
    }
  },
  "include": ["src/**/*", "../interfaces/**/*"],
  "exclude": ["node_modules"]
}
